<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin" >

        <TextView
            android:id="@+id/profil_requis_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        	android:layout_marginTop="10dp"
            android:text="@string/profil_requis_1" />
        
        <TextView
            android:id="@+id/profil_requis_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        	android:layout_below="@+id/profil_requis_1"
        	android:layout_marginTop="10dp"
            android:text="@string/profil_requis_2" />
        
        <TextView
            android:id="@+id/profil_requis_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        	android:layout_below="@+id/profil_requis_2"
        	android:layout_marginTop="10dp"
            android:text="@string/profil_requis_3" />
        
        <TextView
            android:id="@+id/profil_requis_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        	android:layout_below="@+id/profil_requis_3"
        	android:layout_marginTop="10dp"
            android:text="@string/profil_requis_4" />
        
        <TextView
            android:id="@+id/profil_requis_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        	android:layout_below="@+id/profil_requis_4"
        	android:layout_marginTop="10dp"
            android:text="@string/profil_requis_5" />
        
        <TextView
            android:id="@+id/profil_requis_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        	android:layout_below="@+id/profil_requis_5"
        	android:layout_marginTop="10dp"
            android:text="@string/profil_requis_6" />
        
        <TextView
            android:id="@+id/profil_requis_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        	android:layout_below="@+id/profil_requis_6"
        	android:layout_marginTop="10dp"
            android:text="@string/profil_requis_7" />
        
        <TextView
            android:id="@+id/profil_requis_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        	android:layout_below="@+id/profil_requis_7"
        	android:layout_marginTop="10dp"
            android:text="@string/profil_requis_8" />
    </RelativeLayout>

</ScrollView>