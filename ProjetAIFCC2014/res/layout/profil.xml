<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blanc"
    android:fitsSystemWindows="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:gravity="left"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.projetaifcc2014.ProfilActivity" >

    <ImageButton
        android:id="@+id/profil_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/aifcc_logo"
        android:contentDescription="@string/profil_7_desc"
        android:onClick="onClick"
        android:text="@string/profil_7"
        android:weightSum="2" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="MÃ©moriser mon choix ..."
        android:textSize="9sp" />

    <Button
        android:id="@+id/profil_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkBox1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_profil_6"
        android:contentDescription="@string/profil_6_desc"
        android:onClick="onClick"
        android:text="@string/profil_6" />

    <Button
        android:id="@+id/profil_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/profil_7"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/btn_profil_1"
        android:contentDescription="@string/profil_1_desc"
        android:onClick="onClick"
        android:text="@string/profil_1" />

    <Button
        android:id="@+id/profil_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/profil_1"
        android:layout_alignBottom="@+id/profil_1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:background="@drawable/btn_profil_2"
        android:contentDescription="@string/profil_2_desc"
        android:onClick="onClick"
        android:text="@string/profil_2" />

    <Button
        android:id="@+id/profil_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/profil_1"
        android:layout_below="@+id/profil_1"
        android:layout_marginTop="42dp"
        android:background="@drawable/btn_profil_4"
        android:contentDescription="@string/profil_3_desc"
        android:onClick="onClick"
        android:text="@string/profil_3" />

    <Button
        android:id="@+id/profil_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/profil_3"
        android:layout_alignBottom="@+id/profil_3"
        android:layout_alignLeft="@+id/profil_2"
        android:background="@drawable/btn_profil_5"
        android:contentDescription="@string/profil_5_desc"
        android:onClick="onClick"
        android:text="@string/profil_4" />

</RelativeLayout>