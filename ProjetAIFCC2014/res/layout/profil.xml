        android:id="@+id/profil_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/profil_3"
        android:layout_alignRight="@+id/profil_7"
        android:layout_marginRight="18dp"
        android:background="@color/blanc"
        android:contentDescription="@string/profil_2_desc"
        android:onClick="onClick"
        android:src="@drawable/btn_profil_2"
        android:text="@string/profil_2" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:background="@color/blanc"
        android:src="@drawable/menu" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/profil_3"
        android:layout_alignLeft="@+id/profil_2"
        android:layout_alignRight="@+id/profil_2"
        android:layout_alignTop="@+id/profil_2"
        android:gravity="center"
        android:text="Demandeurs d'emploi" />

    <ImageButton
        android:id="@+id/profil_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profil_7"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/imageButton1"
        android:background="@color/blanc"
        android:contentDescription="@string/profil_1_desc"
        android:onClick="onClick"
        android:src="@drawable/btn_profil_1"
        android:text="@string/profil_1" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/profil_1"
        android:layout_alignLeft="@+id/profil_1"
        android:layout_alignRight="@+id/profil_1"
        android:layout_alignTop="@+id/profil_1"
        android:gravity="center"
        android:text="Etudiants" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Mémoriser mon choix ..." />

    <RadioButton
        android:id="@+id/RadioButton01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/profil_1"
        android:layout_below="@+id/profil_1"
        android:layout_marginRight="42dp"
        android:text=" " />

