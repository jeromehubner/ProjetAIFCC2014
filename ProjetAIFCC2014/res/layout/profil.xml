<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blanc"
    android:fitsSystemWindows="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:gravity="left"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.projetaifcc2014.ProfilActivity">

    <ImageButton
        android:id="@+id/profil_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/profil_1"
        android:layout_below="@+id/profil_3"
        android:layout_marginTop="58dp"
        android:background="@color/blanc"
        android:contentDescription="@string/profil_5_desc"
        android:onClick="onClick"
        android:src="@drawable/btn_profil_5"
        android:text="@string/profil_5" />

    <ImageButton
        android:id="@+id/profil_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/profil_4"
        android:layout_alignTop="@+id/profil_5"
        android:background="@color/blanc"
        android:contentDescription="@string/profil_6_desc"
        android:onClick="onClick"
        android:src="@drawable/btn_profil_6"
        android:text="@string/profil_6" />

    <ImageButton
        android:id="@+id/profil_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/profil_5"
        android:layout_below="@+id/profil_1"
        android:layout_marginTop="60dp"
        android:background="@color/blanc"
        android:contentDescription="@string/profil_3_desc"
        android:onClick="onClick"
        android:src="@drawable/btn_profil_3"
        android:text="@string/profil_3" />

    <ImageButton
        android:id="@+id/profil_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/aifcc_logo"
        android:contentDescription="@string/profil_7_desc"
        android:onClick="onClick"
        android:text="@string/profil_7"
        android:weightSum="2" />

    <ImageButton
        android:id="@+id/profil_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/profil_5"
        android:layout_alignLeft="@+id/profil_2"
        android:background="@color/blanc"
        android:contentDescription="@string/profil_4_desc"
        android:onClick="onClick"
        android:src="@drawable/btn_profil_4"
        android:text="@string/profil_4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/profil_6"
        android:layout_alignLeft="@+id/profil_6"
        android:layout_alignRight="@+id/profil_6"
        android:layout_alignTop="@+id/profil_6"
        android:gravity="center"
        android:text="Se connecter" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/profil_4"
        android:layout_alignLeft="@+id/profil_4"
        android:layout_alignRight="@+id/profil_4"
        android:layout_alignTop="@+id/profil_4"
        android:gravity="center"
        android:text="Responsable RH" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/profil_3"
        android:layout_alignLeft="@+id/profil_3"
        android:layout_alignRight="@+id/profil_3"
        android:layout_alignTop="@+id/profil_3"
